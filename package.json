    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dompurify": "^3.2.7",
    "katex": "^0.16.25",
    "marked": "^16.3.0",
    "prismjs": "^1.30.0"
  }
}
